{
  "name": "Side bar",
  "version": "0.0.1",
  "description": "Take Notes on web pages!",
  "permissions": ["tabs","activeTab","declarativeContent", "storage", "downloads"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css": ["bar.css"],
        "js": ["bar.js"]
    }],
  "manifest_version": 2
}